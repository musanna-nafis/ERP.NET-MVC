
@{
    ViewBag.Title = "ProfileEdit";
}

<h2>ProfileDetails</h2>
<html>
<head>
    <title>Industryal - ERP</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css">
</head>
<body>


    <div class="container-fluid">
        <header class="border bg-dark m-0 p-1 fixed-top">
            <div class="row">
                <div class="col-9 ">
                    <h1 class="text-white"><i>ERP</i></h1>
                </div>

                <div class=" col-lg-3  ">
                    <ul class="nav justify-content-center ">
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block  mt-2" href="@Url.Action("Home", "HR_Basic")"><i class="fas fa-home"></i>Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block  mt-2" href="@Url.Action("ProfileDetails", "HR_Profile")"><i class="fas fa-user"></i>Profile</a></li>
                        @*<span style="padding-right:7px;"></span>*@
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block mt-2" href="@Url.Action("Logout", "usersActivity")"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>
    </div>
    <br><br><br>
    <h1 class="text-center"><i class="fas fa-user"></i>Edit Profile</h1>
    <div class="row">
        <div class="col-2">
            <nav class=" navbar border-dark w-25">

                <ul class="navbar-nav">


                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("PasswordChange", "HR_Profile")"> Change Password</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("ProfileDetails", "HR_Profile")">Back</a></li>

                </ul>
            </nav>
        </div>
    </div>
    <center> <span style="color:red;">@TempData["Msg"]</span></center>
    <form method="post" class="w-50 m-auto">


        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname">
            @Html.ValidationMessage("firstname", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname">
            @Html.ValidationMessage("lastname", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input type="number" class="form-control" name="phone">
            @Html.ValidationMessage("phone", new { @class = "text-danger" })
        </div>
        <div class="from-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email">
            @Html.ValidationMessage("email", new { @class = "text-danger" })
        </div>
        <div class="foem-group">
            <label>Present address</label>
            <input type="text" class="form-control" name="address">
            @Html.ValidationMessage("address", new { @class = "text-danger" })
        </div>
        <div class="from-group">
            <center><input class="btn btn-outline-primary btn-block w-50 mt-3" type="submit" value="Update" style="color:tomato"></center>
        </div>

    </form>
    <!-- Footer Starts-->
    <footer id="main-footer" class="bg-primary text-white mt-5 p-2">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span>2022</span>
                        ERP
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->



</body>
</html>