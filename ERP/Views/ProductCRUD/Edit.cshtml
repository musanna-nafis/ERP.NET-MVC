<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- for bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous"> <!-- for fontawesome -->

    <title>Product | Edit</title>
</head>
<body>
    <!-- Header Starts -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-2">
            <div class="container">
                <a href="/ProductHome/Home" class="navbar-brand">ERP</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown mr-3">
                            <a href="/ProductManagerProfile/MyProfile" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-user"></i> &nbsp @Session["name"].ToString()
                            </a>
                            <div class="dropdown-menu mt-2 ml-3 bg-light">
                                <a href="/ProductManagerProfile/MyProfile" class="dropdown-item">
                                    <i class="fas fa-user-circle"></i> Profile
                                </a>
                        </li>
                        <li class="nav-item">
                            <a href="/usersActivity/Logout" class="nav-link">
                                <i class="fas fa-user-times"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Main Body Starts -->
    <br><br><br>
    <main id="main ">
        <div class="">
            <div class="row mt-2 justify-content-around">
                <div class="col-12 col-lg-2 border border-dark bg-light rounded p-3">
                    <div class="text-left mt-2 rounded">
                        <h4>Products</h4>
                        <a href="/ProductCRUD/Create" class="btn btn-outline-dark btn-sm mb-2">New Product</a> <br>
                        <a href="/ProductCRUD/List" class="btn btn-outline-dark btn-sm mb-2">List</a> <br>
                        <a href="/ProductCRUD/Faulty" class="btn btn-outline-dark btn-sm mb-2">Faulty Products</a> <br>
                        <a href="/ProductStock/Index" class="btn btn-outline-dark btn-sm mb-2">Stocks</a> <br>
                        <a href="/ProductTransfer/Index" class="btn btn-outline-dark btn-sm mb-2">Transfer Product</a> <br>
                        <a href="/ProductVisualization/PieChart" class="btn btn-outline-dark btn-sm mb-2">Statistics</a> <br> <hr>
                    </div>
                    <div class="text-left mt-2">
                        <h4>Warehouse</h4>
                        <a href="/WareHouseCRUD/Create" class="btn btn-outline-dark btn-sm mb-2">New Warehouse</a> <br>
                        <a href="/WareHouseCRUD/List" class="btn btn-outline-dark btn-sm mb-2">List</a> <br>
                        <a href="#" class="btn btn-outline-dark btn-sm mb-2">Statistics</a> <br> <hr>
                    </div>
                    <div class="text-left mt-2">
                        <h4>Others</h4>
                        <a href="/ProductLeave/Create" class="btn btn-outline-dark btn-sm mb-2">Leave Request</a> <br>
                        <a href="#" class="btn btn-outline-dark btn-sm mb-2">Activities</a> <br>
                        <a href="/ProductIssue/Create" class="btn btn-outline-dark btn-sm mb-2">Administration</a> <br>
                    </div>
                </div>
                <div class="col-12 col-lg-9 border border-dark rounded p-3">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h3><i class="fas fa-sync-alt"></i></i>&nbsp &nbsp Update Product</h3>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <div class="container">
                                <div class="text-left">
                                    <form action="" method="post">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <td>Name</td>
                                                <td colspan='2'>
                                                    <input type="text" name="product_name" class="form-control" value="@(Model != null ? Model.product_name : "")" />
                                                    @Html.ValidationMessage("product_name", new { @class = "text-danger" })
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Status (Sell)</td>
                                                <td colspan='2'>
                                                    <select class="form-control" name="status_sale" value="@(Model != null ? Model.status_sale : "")">
                                                        <option @(Model.status_sale == "For sale" ? "selected" : "")>For sale</option>
                                                        <option @(Model.status_sale == "Not for sale" ? "selected" : "")>Not for sale</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("status_sale", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Status (Purchase)</td>
                                                <td colspan='2'>
                                                    <select class="form-control" name="status_purchase" value="@(Model != null ? Model.status_purchase : "")">
                                                        <option @(Model.status_purchase == "For Purchase" ? "selected" : "")>For Purchase</option>
                                                        <option @(Model.status_purchase == "Not for purchase" ? "selected" : "")>Not for purchase</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("status_purchase", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Description</td>
                                                <td colspan='2'>
                                                    <textarea type="text" name="product_description" class="form-control">@(Model != null ? Model.product_description : "")</textarea>
                                                    <span>@Html.ValidationMessage("product_description", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Stock</td>
                                                <td colspan='2'>
                                                    <input type="text" class="form-control" name="stock" value="@(Model != null ? Model.stock : 0)">
                                                    <span>@Html.ValidationMessage("stock", new { @class = "text-danger" })</span>
                                                    <span class="text-danger">@TempData["msge"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Nature of product</td>
                                                <td colspan='2'>
                                                    <select class="form-control" name="nature" value="@(Model != null ? Model.nature : "")">
                                                        <option @(Model.nature == "Manufactured Product" ? "selected" : "")>Manufactured Product</option>
                                                        <option @(Model.nature == "Raw Material" ? "selected" : "")>Raw Material</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("nature", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Weight</td>
                                                <td>
                                                    <input type="text" class="form-control" name="weight" value="@(Model != null ? Model.weight : 0)">
                                                    <span>@Html.ValidationMessage("weight", new { @class = "text-danger" })</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="weight_unit" value="@(Model != null ? Model.weight_unit : "")">
                                                        <option @(Model.weight_unit == "kilogram" ? "selected" : "")>kilogram</option>
                                                        <option @(Model.weight_unit == "gram" ? "selected" : "")>gram</option>
                                                        <option @(Model.weight_unit == "tonne" ? "selected" : "")>tonne</option>
                                                        <option @(Model.weight_unit == "mg" ? "selected" : "")>mg</option>
                                                        <option @(Model.weight_unit == "ounce" ? "selected" : "")>ounce</option>
                                                        <option @(Model.weight_unit == "pound" ? "selected" : "")>pound</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("weight_unit", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Length x Width x Height</td>
                                                <td>
                                                    <input type="text" class="form-control" name="dimention" value="@(Model!=null? Model.dimention:0)">
                                                    <span>@Html.ValidationMessage("dimention", new { @class = "text-danger" })</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="dimention_unit" value="@(Model!=null? Model.dimention_unit:"")">
                                                        <option @(Model.dimention_unit == "m" ? "selected" : "")>m</option>
                                                        <option @(Model.dimention_unit == "dm" ? "selected" : "")>dm</option>
                                                        <option @(Model.dimention_unit == "cm" ? "selected" : "")>cm</option>
                                                        <option @(Model.dimention_unit == "mm" ? "selected" : "")>mm</option>
                                                        <option @(Model.dimention_unit == "foot" ? "selected" : "")>foot</option>
                                                        <option @(Model.dimention_unit == "inch" ? "selected" : "")>inch</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("dimention_unit", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Selling Price</td>
                                                <td>
                                                    <input type="number" class="form-control" name="selling_price" value="@(Model!=null? Model.selling_price:0)">
                                                    <span>@Html.ValidationMessage("selling_price", new { @class = "text-danger" })</span>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="tax" value="@(Model!=null? Model.tax:"")">
                                                        <option @(Model.tax == "Excluding Tax" ? "selected" : "")>Excluding Tax</option>
                                                        <option @(Model.tax == "Including Tax" ? "selected" : "")>Including Tax</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("tax", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Condition:</td>
                                                <td colspan='2'>
                                                    <select class="form-control" name="product_condition">
                                                        <option @(Model.product_condition == "good" ? "selected" : "")>good</option>
                                                        <option @(Model.product_condition == "faulty" ? "selected" : "")>faulty</option>
                                                    </select>
                                                    <span>@Html.ValidationMessage("product_condition", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3"><input type="submit" class="btn btn-warning btn-block" value="Update"></td>
                                            </tr>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Main Body Ends -->
    <!-- Footer Starts-->
    <footer id="main-footer" class="bg-dark text-white mt-5 p-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span id="year"></span>
                        ERP
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
            crossorigin="anonymous"></script>
</body>
</html>