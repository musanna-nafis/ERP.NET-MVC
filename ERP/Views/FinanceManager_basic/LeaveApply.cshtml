            </ul>
            <div class="navbar-nav ml-auto">
                <li class="nav-item"><a class="btn btn-outline-info" href="@Url.Action("ProfileInfo", "FinanceManager_basic")" style="color:white;"><i class="fas fa-address-card"></i> Profile</a></li>
                <span style="padding-right:5px;"></span>
                <li class="nav-item"><a class="btn btn-outline-danger" href="@Url.Action("Logout", "usersActivity")" style="color:white;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </div>
        </div>
    </nav>

</body>
<div style="padding-top:80px;">
    <table>
        <tr>
            <td align="center" style="padding:20px;">
                <div class="card border-warning mb3" style="height:600px;width:250px">
                    <div class="card-header">Leave-Request Options</div>
                    <div class="card-body">
                        <table align="left">
                            <div class="btn-group-vertical">
                                <a class="btn btn-info text-left" href="@Url.Action("LeaveRequests", "FinanceManager_basic")"><i class="fas fa-list"></i> My Leave-Requests</a>
                                <a class="btn btn-info text-left" href="@Url.Action("LeaveApply", "FinanceManager_basic")"><i class="fas fa-plus"></i> New Leave-Requests</a>
                            </div>
                        </table>
                    </div>
                </div>

            </td>
            <td align="center" style="padding:20px;">
            </td>
            <td align="center">
                <form action="" method="post">
                    <div class="card border-warning mb3" style="height:600px;width:1100px">
                        <div class="card-header">New Leave-Request</div>
                        <div class="card-body scroll-box">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">Leave Type: </td>
                                        <td align="left" style="padding-bottom:10px;">
                                            <select class="form-control" name="type" id="type">
                                                <option value="Sick Leave" selected>Sick Leave</option>
                                                <option value="Other Leave">Other Leave</option>
                                            </select>

                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">Reason (Description): </td>
                                        <td align="left" style="padding-bottom:10px;"><textarea class="form-control" name="request_description" rows="3" value="@(Model != null ? Model.request_description :"")"></textarea><span id="err_leave_description" style="color:red;">@Html.ValidationMessage("request_description", new { @class = "text-danger" })</span></td>
                                    </tr>
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">Start Date: </td>
                                        <td><input class="form-control" type="date" name="start_time" id="start_time" value="@(Model != null ? Model.start_time :"")"><span id="err_start_time" style="color:red;">@Html.ValidationMessage("start_time", new { @class = "text-danger" })</span></td>
                                    </tr>
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">End Date: </td>
                                        <td><input class="form-control" type="date" name="end_time" id="end_time" value="@(Model != null ? Model.end_time :"")"><span id="err_end_time" style="color:red;">@Html.ValidationMessage("end_time", new { @class = "text-danger" })</span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer"><input type="submit" name="submit-button" class="btn btn-success" value="Request"></div>
                        <span id="err_signin_pass" style="color:red;">@TempData["msg"]</span>
                    </div>
                </form>
            </td>
        </tr>
    </table>
</div>

