            </ul>
            <div class="navbar-nav ml-auto">
                <li class="nav-item"><a class="btn btn-outline-info" href="@Url.Action("ProfileInfo", "FinanceManager_basic")" style="color:white;"><i class="fas fa-address-card"></i> Profile</a></li>
                <span style="padding-right:5px;"></span>
                <li class="nav-item"><a class="btn btn-outline-danger" href="@Url.Action("Logout", "usersActivity")" style="color:white;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </div>
        </div>
    </nav>

</body>
<div style="padding-top:100px;">
    <center>
        <table>
            <tr>
                <td align="left" style="padding:20px;">
                    <div class="card border-warning mb3" style="height:300px;width:1120px">
                        <div class="card-header">Organization</div>
                        <div class="card-body">
                            <table>
                                @if (ViewBag.organization != null)
                                {
                                    <tr>
                                        <th>Name: </th>
                                        <td>@ViewBag.organization.name</td>
                                    </tr>
                                    <tr>
                                        <th>Email: </th>
                                        <td>@ViewBag.organization.email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone: </th>
                                        <td>@ViewBag.organization.phone</td>
                                    </tr>
                                    <tr>
                                        <th>EST: </th>
                                        <td>@ViewBag.organization.established</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td align="center" style="padding:20px;">
                    <div class="card border-warning mb3" style="height:300px;width:400px">
                        <div class="card-header">Product</div>
                        <div class="card-body">
                            <table>
                                @if (ViewBag.product != null)
                                {

                                    <tr>
                                        <th>Manager: </th>
                                        <td>@ViewBag.product.firstname &nbsp @ViewBag.product.lastname</td>
                                    </tr>
                                    <tr>
                                        <th>Email: </th>
                                        <td>@ViewBag.product.email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone: </th>
                                        <td>@ViewBag.product.phone</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </td>
                <td align="center" style="padding:20px;">
                    <div class="card border-info mb3" style="height:300px;width:400px">
                        <div class="card-header">Sales & Marketing</div>
                        <div class="card-body">
                            <table>
                                @if (ViewBag.sales != null)
                                {
                                    <tr>
                                        <th>Manager: </th>
                                        <td>@ViewBag.sales.firstname &nbsp @ViewBag.sales.lastname</td>
                                    </tr>
                                    <tr>
                                        <th>Email: </th>
                                        <td>@ViewBag.sales.email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone: </th>
                                        <td>@ViewBag.sales.phone</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </td>
                <td align="center" style="padding:20px;">
                    <div class="card border-success mb3" style="height:300px;width:400px">
                        <div class="card-header">HR</div>
                        <div class="card-body">
                            <table>
                                @if (ViewBag.hr != null)
                                {
                                    <tr>
                                        <th>Manager: </th>
                                        <td>@ViewBag.hr.firstname &nbsp @ViewBag.hr.lastname</td>
                                    </tr>
                                    <tr>
                                        <th>Email: </th>
                                        <td>@ViewBag.hr.email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone: </th>
                                        <td>@ViewBag.hr.phone</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </center>
</div>
