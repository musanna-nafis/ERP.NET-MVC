<h1 class="btn btn-primary"> Update Information </h1>
<form method="post" class="w-50 m-auto" enctype="multipart/form-data" action="">




    <div class="form-group">
        <label> Username</label>
        <input type="text" class="form-control" name="username" value="@Model.username">
        <span id="err_signin_email" style="color:red;">@Html.ValidationMessage("username", new { @class = "text-danger" })</span>

    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" value="@Model.email">
        <span id="err_signin_email" style="color:red;">@Html.ValidationMessage("email", new { @class = "text-danger" })</span>

    </div>
    <div class="form-group">
        <label>Mobile Number</label>
        <input type="text" class="form-control" name="phone" value="@Model.phone">
        <span id="err_signin_email" style="color:red;">@Html.ValidationMessage("phone", new { @class = "text-danger" })</span>

    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" value="@Model.address">
        <span id="err_signin_email" style="color:red;">@Html.ValidationMessage("address", new { @class = "text-danger" })</span>

    </div>

    <div class="from-group">
        <center><input class="btn btn-outline-primary btn-block w-50 mt-3" type="submit" value="Change"></center>
    </div>
    <span id="err_signin_pass" style="color:red;">@TempData["msg"]</span>

</form>


