
@{
    ViewBag.Title = "Expenses";
}

<head>
    <title>Industryal - Finance & Accounting</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top dropshadow">
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <div class="navbar-brand">
                <h1 class="text-white"><i>ERP</i></h1>
            </div>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Home", "FinanceManager_basic")">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("ChangePassword", "FinanceManager_basic")">Change Password</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("UpdateInformantion", "FinanceManager_basic")">Change Informations</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("LeaveApplication", "FinanceManager_basic")">Leave apply</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Payments", "FinanceManager_Professional")">Payments</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("SendEmail", "FinanceManager_Professional")">Send Mail</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "FinanceManager_Invoice")">Invoice</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "FinanceManager_Budgeting")">Budgeting</a></li>
            </ul>
            <div class="navbar-nav ml-auto">
                <li class="nav-item"><a class="btn btn-outline-info" href="@Url.Action("ProfileInfo", "FinanceManager_basic")" style="color:white;"><i class="fas fa-address-card"></i> Profile</a></li>
                <span style="padding-right:5px;"></span>
                <li class="nav-item"><a class="btn btn-outline-danger" href="@Url.Action("Logout", "usersActivity")" style="color:white;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </div>
        </div>
    </nav>

</body>
<div style="padding-top:80px;">
    <table>
        <tr>
            <td align="center" style="padding:20px;">
                <div class="card border-warning mb3" style="height:600px;width:250px">
                    <div class="card-header">Budgeting Options</div>
                    <div class="card-body">
                        <table align="left">
                            <div class="btn-group-vertical">
                                <a class="btn btn-info text-left" href="@Url.Action("ConnectedBanks", "FinanceManager_Budgeting")"><i class="fas fa-list"></i> Connected Banks</a>
                                <a class="btn btn-info text-left" href="@Url.Action("AddBankAccount", "FinanceManager_Budgeting")"><i class="fas fa-plus"></i> Add Bank Account</a>
                                <a class="btn btn-info text-left" href="@Url.Action("Expenses", "FinanceManager_Budgeting")"><i class="fas fa-ban"></i> Expenses</a>
                                <a class="btn btn-info text-left" href="@Url.Action("Liability", "FinanceManager_Budgeting")"><i class="fas fa-ban"></i> Liability</a>
                                <a class="btn btn-info text-left" href="@Url.Action("Asset", "FinanceManager_Budgeting")"><i class="fas fa-plus"></i> Asset</a>
                            </div>
                        </table>
                    </div>
                </div>



            </td>
            <td align="center" style="padding:20px;">
            </td>
            <td align="center">
                <form action="" method="post">

                    <div class="card border-warning mb3" style="height:600px;width:1100px">
                        <div class="card-header">Budgeting - Expense</div>
                        <div class="card-body scroll-box">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">Type: </td>
                                        <td align="left" style="padding-bottom:10px;">
                                            <select class="form-control" name="type" id="type">
                                                <option value="Purchases" selected>Purchases</option>
                                                <option value="Salaries">Salaries</option>
                                                <option value="Others">Others</option>
                                            </select>
                                            <span id="err_type" style="color:red;">@Html.ValidationMessage("type", new { @class = "text-danger" })</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left" style="padding-bottom:10px;">Amount: </td>
                                        <td align="left" style="padding-bottom:10px;"><input class="form-control" type="number" name="amount" placeholder="Amount" value="@(Model != null ? Model.amount :"")"><span id="err_amount" style="color:red;">@Html.ValidationMessage("amount", new { @class = "text-danger" })</span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer"><input type="submit" name="submit-button" class="btn btn-success" value="Add"></div>

                    </div>
                    <span id="err_signin_pass" style="color:red;">@TempData["msg"]</span>
                </form>
            </td>
        </tr>
    </table>
</div>