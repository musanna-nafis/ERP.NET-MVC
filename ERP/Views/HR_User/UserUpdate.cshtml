
@{
    ViewBag.Title = "UserUpdate";
}

<h2>UserUpdate</h2>

<html>
<head>
    <title>Industryal - ERP</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css">
</head>
<body>


    <div class="container-fluid">
        <header class="border bg-dark m-0 p-1 fixed-top">
            <div class="row">
                <div class="col-9 ">
                    <h1 class="text-white"><i>ERP</i></h1>
                </div>

                <div class=" col-lg-3  ">
                    <ul class="nav justify-content-center ">
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block  mt-2" href="@Url.Action("Home", "HR_Basic")"><i class="fas fa-home"></i>Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block  mt-2" href="@Url.Action("ProfileDetails", "HR_Profile")"><i class="fas fa-user"></i>Profile</a></li>
                        @*<span style="padding-right:7px;"></span>*@
                        <li class="nav-item"><a class="nav-link text-white btn btn-outline-primary btn-block mt-2" href="@Url.Action("Logout", "usersActivity")"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>
    </div>
    <br><br><br>
    <div class="row">
        <div class="col-2">
            <nav class=" navbar border-dark w-25">

                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("UserCreate", "HR_User")">New user</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("UserList", "HR_User")"> User List</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("EmployeeCreate", "HR_Employee")"> New Employee</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("CreateEmployeeGroup", "HR_Employee")">Add group</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("EmployeeList", "HR_Employee")">Employee List</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("EmployeeSchedule", "HR_Employee")">Schedules</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("LeaveRequest", "HR_LeaveRequest")">Leave Request</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("LeaveRequestList", "HR_LeaveRequest")">Leave Request List</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("ExpenseReport", "HR_Expense")"> Expense Report</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("ExpenseList", "HR_Expense")"> Expense  Report List</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-primary btn-block mt-2" href="@Url.Action("ExpenseStatistic", "HR_Expense")">Expense Statistic</a></li>

                </ul>
            </nav>
        </div>
        <div class="col-10">
            <div class="info-section p-3 text-black my-5">
                <div class="title text-center mb-3">
                    <h3 class="font-width-border"><i class="fa fa-user-edit"></i> Update User Information </h3>
                </div>
                <hr>
                <div class="border border-primary w-75  m-auto">
                    @{
                        if (TempData["Msg"] != null)
                        {
                            <center>
                                <div class="alert alert-success w-25">
                                    <span style="color:green;">@TempData["Msg"]</span>
                                </div>
                            </center>

                        }


                    }
                    <form method="post" class="w-50 m-auto  ">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" name="firstname" value="@Model.firstname" required>

                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="lastname" value="@Model.lastname" required>

                        </div>
                        <div class="from-group">
                            <label>User Name</label></td>
                            <input type="text" class="form-control" name="username" value="@Model.username" required>

                        </div>

                        <div class="from-group">
                            <label>Organization Id</label></td>
                            <input type="number" class="form-control" name="organization_id" value="@Model.organization_id" required>

                        </div>
                        <div class="from-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="EmailId" name="email" value="@Model.email" required>

                        </div>
                        <div class="form-group">
                            <label>password</label>
                            <input type="password" class="form-control" name="password" value="@Model.password" required>

                        </div>
                        <div class="form-group">
                            <label>Confirm password</label>
                            <input type="password" class="form-control" name="confirm_password" required>

                        </div>
                        <div class="from-group">
                            <label>Gender</label>


                            <select name="gender" class="form-control">
                                @{
                                    string gender = Model.gender;
                                    if (gender == "female")
                                    {
                                        gender = "male";

                                    }
                                    else
                                    {
                                        gender = "female";
                                    }
                                }
                                <option value="male">@Model.gender</option>
                                <option value="female">@gender</option>

                            </select>

                        </div>
                        <div class="form-group">
                            <label>User Type</label>

                            @{

                                string type = Model.type;
                                if (type == "product")
                                {
                                    <select name="type" class="form-control">
                                        <option value="product">Product manager</option>
                                        <option value="hr">HR manager</option>
                                        <option value="finance">Finance manager</option>
                                        <option value="sales">Sales manager</option>
                                    </select>
                                }
                                if (type == "hr")
                                {
                                    <select name="type" class="form-control">
                                        <option value="hr">HR manager</option>
                                        <option value="product">Product manager</option>

                                        <option value="finance">Finance manager</option>
                                        <option value="sales">Sales manager</option>
                                    </select>
                                }
                                if (type == "finance")
                                {
                                    <select name="type" class="form-control">
                                        <option value="finance">Finance manager</option>
                                        <option value="hr">HR manager</option>
                                        <option value="product">Product manager</option>
                                        <option value="sales">Sales manager</option>
                                    </select>
                                }
                                if (type == "sales")
                                {
                                    <select name="type" class="form-control">
                                        <option value="sales">Sales manager</option>
                                        <option value="finance">Finance manager</option>
                                        <option value="hr">HR manager</option>
                                        <option value="product">Product manager</option>
                                    </select>
                                }


                            }


                        </div>
                        <div class="foem-group">
                            <label>Present address</label></td>
                            <input type="text" class="form-control" name="address" value="@Model.address" required>

                        </div>
                        <div class="from-group">
                            <label>Phone</label></td>
                            <input type="number" class="form-control" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" value="@Model.phone" required>

                        </div>

                        <div class="from-group">
                            <label>Job Position</label>
                            <input type="txt" class="form-control" name="position" value="@Model.position" required>

                        </div>





                        <div class="from-group">
                            <center><input class="btn btn-outline-primary btn-block w-50 mt-3" type="submit" value="Update"></center>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>




    <!-- Footer Starts-->
    <footer id="main-footer" class="bg-primary text-white mt-5 p-2">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span>2022</span>
                        ERP
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->



</body>
</html>


