<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- for bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous"> <!-- for fontawesome -->

    <title>Warehouse | Edit</title>
</head>
<body>
    <!-- Header Starts -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-2">
            <div class="container">
                <a href="/ProductHome/Home" class="navbar-brand">ERP</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown mr-3">
                            <a href="/ProductManagerProfile/MyProfile" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <i class="fas fa-user"></i> &nbsp @Session["name"].ToString()
                            </a>
                            <div class="dropdown-menu mt-2 ml-3 bg-light">
                                <a href="/ProductManagerProfile/MyProfile" class="dropdown-item">
                                    <i class="fas fa-user-circle"></i> Profile
                                </a>
                        </li>
                        <li class="nav-item">
                            <a href="/usersActivity/Logout" class="nav-link">
                                <i class="fas fa-user-times"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!-- Main Body Starts -->
    <br><br><br>
    <main id="main ">
        <div class="">
            <div class="row mt-2 justify-content-around">
                <div class="col-12 col-lg-2 border border-dark bg-light rounded p-3">
                    <div class="text-left mt-2 rounded">
                        <h4>Products</h4>
                        <a href="/ProductCRUD/Create" class="btn btn-outline-dark btn-sm mb-2">New Product</a> <br>
                        <a href="/ProductCRUD/List" class="btn btn-outline-dark btn-sm mb-2">List</a> <br>
                        <a href="/ProductCRUD/Faulty" class="btn btn-outline-dark btn-sm mb-2">Faulty Products</a> <br>
                        <a href="/ProductStock/Index" class="btn btn-outline-dark btn-sm mb-2">Stocks</a> <br>
                        <a href="/ProductTransfer/Index" class="btn btn-outline-dark btn-sm mb-2">Transfer Product</a> <br>
                        <a href="/ProductVisualization/PieChart" class="btn btn-outline-dark btn-sm mb-2">Statistics</a> <br> <hr>
                    </div>
                    <div class="text-left mt-2">
                        <h4>Warehouse</h4>
                        <a href="/WareHouseCRUD/Create" class="btn btn-outline-dark btn-sm mb-2">New Warehouse</a> <br>
                        <a href="/WareHouseCRUD/List" class="btn btn-outline-dark btn-sm mb-2">List</a> <br>
                        <a href="#" class="btn btn-outline-dark btn-sm mb-2">Statistics</a> <br> <hr>
                    </div>
                    <div class="text-left mt-2">
                        <h4>Others</h4>
                        <a href="/ProductLeave/Create" class="btn btn-outline-dark btn-sm mb-2">Leave Request</a> <br>
                        <a href="#" class="btn btn-outline-dark btn-sm mb-2">Activities</a> <br>
                        <a href="/ProductIssue/Create" class="btn btn-outline-dark btn-sm mb-2">Administration</a> <br>
                    </div>
                </div>
                <div class="col-12 col-lg-9 border border-dark rounded p-3">
                    <div class="container">
                        <div class="row justify-content-center">
                            <h3> <i class="fas fa-warehouse"></i> &nbsp Update Warehouse</h3>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <div class="row justify-content-center">
                        <div class="col-10">
                            <div class="container">
                                <div class="text-left">
                                    <form action="" method="post">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <td>Id</td>
                                                <td>
                                                    <input type="text" class="form-control" name="id" value="@(Model!=null? Model.id:"")" disabled />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Name</td>
                                                <td clospan="3">
                                                    <input type="text" class="form-control" name="name" value="@(Model!=null? Model.name:"")" />
                                                    <span>@Html.ValidationMessage("name", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Description</td>
                                                <td colspan="3">
                                                    <textarea cols="50" rows="2" class="form-control" name="description">@(Model!=null? Model.description:"")</textarea>
                                                    <span>@Html.ValidationMessage("description", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Address</td>
                                                <td colspan="3">
                                                    <textarea name="address" cols="20" rows="1" class="form-control">@(Model!=null? Model.address:"")</textarea>
                                                    <span>@Html.ValidationMessage("address", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Zip Code</td>
                                                <td clospan="3">
                                                    <input type="text" class="form-control" name="zip_code" value="@(Model!=null? Model.zip_code:"")" />
                                                    <span>@Html.ValidationMessage("zip_code", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">City</td>
                                                <td clospan="3">
                                                    <input type="text" class="form-control" name="city" value="@(Model!=null? Model.city:"")" />
                                                    <span>@Html.ValidationMessage("city", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Country</td>
                                                <td clospan="3">
                                                    <select class="form-control" id="warehouse" name="country">
                                                        <option @(Model.country == "Bangladesh" ? "selected" : "")>Bangladesh</option>
                                                        <option @(Model.country == "India" ? "selected" : "")>India</option>
                                                        <option @(Model.country == "China" ? "selected" : "")>China</option>
                                                        <option @(Model.country == "Indonesia" ? "selected" : "")>Indonesia</option>
                                                        <option @(Model.country == "Japan" ? "selected" : "")>gram</option>
                                                        <option @(Model.country == "Philippines" ? "selected" : "")>Philippines</option>
                                                        <option @(Model.country == "Thiland" ? "selected" : "")>Thiland</option>
                                                        <option @(Model.country == "Malaysia" ? "selected" : "")>Malaysia</option>
                                                        <option @(Model.country == "Nepal" ? "selected" : "")>Nepal</option>
                                                        <option @(Model.country == "Singapore" ? "selected" : "")>Singapore</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Phone</td>
                                                <td clospan="3">
                                                    <input type="text" class="form-control" name="phone" value="@(Model!=null? Model.phone:"")" />
                                                    <span>@Html.ValidationMessage("phone", new { @class = "text-danger" })</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Status</td>
                                                <td>
                                                    <select class="form-control" name="status">
                                                        <option @(Model.status == "Open" ? "selected" : "")>Open</option>
                                                        <option @(Model.status == "Closed" ? "selected" : "")>Closed</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td clospan="3">Quantity</td>
                                                <td clospan="3">
                                                    <input type="text" class="form-control" name="quantity" value="@(Model!=null? Model.quantity:"")" />
                                                    <span>@Html.ValidationMessage("quantity", new { @class = "text-danger" })</span>
                                                    <span class="text-danger">@TempData["msgq"]</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3"><input type="submit" class="btn btn-warning btn-block" value="Update"></td>
                                            </tr>
                                        </table>
                                        <span class="text-success">@TempData["msgs"]</span>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Main Body Ends -->
    <!-- Footer Starts-->
    <footer id="main-footer" class="bg-dark text-white mt-5 p-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span id="year"></span>
                        ERP
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ends -->
    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
            crossorigin="anonymous"></script>
</body>
</html>